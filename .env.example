# Flask secret key (used for session signing)
FLASK_SECRET_KEY=your_flask_secret_key_here

# Auth0 application credentials
AUTH0_AUTH_CLIENT_ID=your_auth0_client_id
AUTH0_AUTH_CLIENT_SECRET=your_auth0_client_secret

# Auth0 endpoints (replace <your-tenant> with your Auth0 tenant domain)
AUTH0_AUTH_URL=https://<your-tenant>.us.auth0.com/authorize
AUTH0_AUTH_TOKEN_URI=https://<your-tenant>.us.auth0.com/oauth/token
AUTH0_AUTH_USER_INFO_URL=https://<your-tenant>.us.auth0.com/userinfo
AUTH0_LOGOUT_URL=https://<your-tenant>.us.auth0.com/v2/logout

# Scope requested during authentication
AUTH0_AUTH_SCOPE=openid profile email

# API Audience (Identifier from your Auth0 API settings)
AUTH0_API_AUDIENCE=https://your-api-identifier

# Whether to protect Flask routes (must be "true" or "false")
AUTH_FLASK_ROUTES=true
